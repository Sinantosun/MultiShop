@if (TempData["UserLoginStatus"] != "Unauthorized")
{

    <div class="col-lg-4">
        <form class="mb-30" method="post" asp-action="ConfirmDiscountCoupon" asp-controller="Discount">
            <div class="input-group">
                <input type="text" class="form-control border-0 p-4" name="code" placeholder="Kupon Kodu">
                <div class="input-group-append">
                    <button class="btn btn-primary">Kuponu Uygula</button>
                </div>
            </div>
        </form>
        <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
        <div class="bg-light p-30 mb-5">
            <div class="border-bottom pb-2">
                <div class="d-flex justify-content-between mb-3">
                    <h6>Toplam Ürün Fiyatı</h6>
                    <h6>@ViewBag.CartTotal.ToString("N2") ₺</h6>
                </div>
                <div class="d-flex justify-content-between">
                    <h6 class="font-weight-medium">Kdv tutarı</h6>
                    <h6 class="font-weight-medium">@ViewBag.tax.ToString("N2") ₺ </h6>
                </div>
                @if (TempData["discount"] != null)
                {
                    <div class="d-flex justify-content-between mb-1">
                        <h6 class="font-weight-medium">İndirim Oranı (%)</h6>
                        <h6 class="font-weight-medium">% @ViewBag.discountrate</h6>
                    </div>

                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">İndirim Tutarı (₺)</h6>
                        <h6 class="font-weight-medium">@ViewBag.newtotalprice.ToString("N2")</h6>
                    </div>

                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">İndirimsiz Tutar</h6>
                        <h6 class="font-weight-medium">@ViewBag.price.ToString("N2")</h6>
                    </div>
                    
                }
              
            </div>
            <div class="pt-2">
                <div class="d-flex justify-content-between mt-2">
                    <h5>Güncel Tutar</h5>
                    <h5>@ViewBag.TotalpriceWithTax.ToString("N2")</h5>
                </div>
                <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödeme Adımına Geç</button>
            </div>

        </div>
    </div>
}

