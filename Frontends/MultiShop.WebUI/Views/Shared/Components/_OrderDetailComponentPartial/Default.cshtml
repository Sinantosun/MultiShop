@model CreateOrderAddressDto
<div class="col-lg-8">
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Teslimat ve Fatura Adresiniz</span></h5>
    <div class="bg-light p-30 mb-5">
        <form method="post" asp-controller="Order" asp-action="AddOrderAddress">
            <div class="row">
                <div class="col-md-6 form-group">
                    <label>Adınız</label>
                    <input class="form-control" asp-for="Name" type="text" placeholder="Adınız">
                </div>
                <div class="col-md-6 form-group">
                    <label>Soyadınız</label>
                    <input class="form-control" asp-for="SurName" type="text" placeholder="Soyadınız">
                </div>
                <div class="col-md-6 form-group">
                    <label>E-mail adresiniz</label>
                    <input class="form-control" type="text" asp-for="Email" placeholder="mail@email.com">
                </div>
                <div class="col-md-6 form-group">
                    <label>Telefon numaranız</label>
                    <input class="form-control" type="text" asp-for="Phone" placeholder="+90 000 000 00 00">
                </div>
                <div class="col-md-6 form-group">
                    <label>Address Satırı 1 </label>
                    <input class="form-control" type="text" asp-for="Detail1" placeholder="123 mahallesi">
                </div>
                <div class="col-md-6 form-group">
                    <label>Adres Satırı 2 </label>
                    <input class="form-control" type="text" asp-for="Detail2" placeholder="123 sokak">
                </div>
                <div class="col-md-6 form-group">
                    <label>Ülke</label>
                    <input class="form-control" type="text" asp-for="Country" placeholder="Türkiye">
                </div>
                <div class="col-md-6 form-group">
                    <label>Şehir</label>
                    <input class="form-control" type="text" asp-for="City" placeholder="Şehiriniz">
                </div>
                <div class="col-md-6 form-group">
                    <label>İlçe</label>
                    <input class="form-control" type="text" asp-for="District" placeholder="İlçe">
                </div>
                <div class="col-md-6 form-group">
                    <label>Posta Kodu</label>
                    <input class="form-control" type="text" asp-for="ZipCode" placeholder="123">
                </div>
                <div class="col-md-12 form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="newaccount">
                        <label class="custom-control-label" for="newaccount">Create an account</label>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>