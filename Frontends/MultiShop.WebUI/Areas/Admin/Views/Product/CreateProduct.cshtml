@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <form method="post">
            <div class="col-md-6">
                <div class="chart-box">
                    <h4>Ürün Temel Bilgileri </h4>
                    <div class="form-group">
                        <label for="exampleInputForProductName">Ürün Adı</label>
                        <input type="text" asp-for="ProductName" class="form-control" id="exampleInputForProductName" placeholder="Lütfen ürün adını yazınız">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputForProductPrice">Ürün Fiyatı</label>
                        <input type="text" asp-for="ProductPrice" class="form-control" id="exampleInputForProductPrice" placeholder="Lütfen ürün Fiyatını yazınız">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputForProductImage">Ürün Görsel</label>
                        <input type="text" asp-for="ProductImageUrl" class="form-control" id="exampleInputForProductImage" placeholder="Lütfen ürün görseli linkini yazınız">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputForProductCategory">Ürün Kategorisini Seçiniz</label>
                        <select style="height:40px" asp-for="CategoryId" asp-items="@ViewBag.categoryvalues" class="form-control"></select>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputForProductDescription">Ürün Açıklaması</label>
                        <textarea type="text" rows="20" asp-for="ProductDescription" class="form-control" id="exampleInputForProductDescription" placeholder="Lütfen ürün açıklamasını yazınız"></textarea>
                    </div>

                </div>
            </div>
            <div class="col-md-6">
                <div class="chart-box">
                    <h4>Ürün Detayı Açıklama Ve Bilgisi </h4>

                    <div class="form-group">
                        <label for="exampleInputForProductDetailDescription">Ürün Açıklaması</label>
                        <textarea type="text" rows="5" asp-for="ProductDetailDescription" class="form-control" id="exampleInputForProductDetailDescription" placeholder="Lütfen ürün açıklamasını yazınız"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputForProductInfo">Ürün Bilgisi</label>
                        <textarea type="text" rows="5" asp-for="ProductInfo" class="form-control" id="exampleInputForProductInfo" placeholder="Lütfen ürün açıklamasını yazınız"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="chart-box">
                    <h4>Ürün Detayı Slider Görselleri</h4>

                    <div class="form-group">
                        <label for="exampleInputForProducImage1">1. Görsel</label>
                        <input type="text" asp-for="Image1" class="form-control" id="exampleInputForProducImage1" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputForProducImage2">2. Görsel</label>
                        <input type="text" asp-for="Image2" class="form-control" id="exampleInputForProducImage2" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputForProducImage3">3. Görsel</label>
                        <input type="text" asp-for="Image3" class="form-control" id="exampleInputForProducImage3" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputForProducImage4">4. Görsel</label>
                        <input type="text" asp-for="Image4" class="form-control" id="exampleInputForProducImage4" />
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary">Kaydet</button>

                </div>

            </div>
        </form>
    </div>
</section>