@model ResultProductByIdDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}




<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yeni Ürün Ekleme Sayfası </h4>
                <form method="post">
                    <input type="hidden" asp-for="Id">
                    <div class="form-group">
                        <label for="exampleInputForProductName">Ürün Adı</label>
                        <input type="text" asp-for="ProductName" class="form-control" id="exampleInputForProductName" placeholder="Lütfen ürün adını yazınız">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputForProductPrice">Ürün Fiyatı</label>
                        <input type="text" asp-for="ProductPrice" class="form-control" id="exampleInputForProductPrice" placeholder="Lütfen ürün Fiyatını yazınız">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputForProductImage">Ürün Görsel</label>
                        <input type="text" asp-for="ProductImageUrl" class="form-control" id="exampleInputForProductImage" placeholder="Lütfen ürün görseli linkini yazınız">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputForProductCategory">Ürün Kategorisini Seçiniz</label>
                        <select style="height:40px" asp-for="CategoryId" asp-items="@ViewBag.categoryvalues" class="form-control"></select>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputForProductDescription">Ürün Açıklaması</label>
                        <textarea type="text" rows="10" asp-for="ProductDescription" class="form-control" id="exampleInputForProductDescription" placeholder="Lütfen ürün açıklamasını yazınız"></textarea>
                    </div>
                    <button type="submit" class="btn btn-sm btn-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</section>
