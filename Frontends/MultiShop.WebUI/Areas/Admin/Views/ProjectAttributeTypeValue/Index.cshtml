@using MultiShop.DtoLayer.Dtos.CatalogDtos.ProductAttributeTypeValueDtos
@model CreateProductAttributeTypeValueDto
@{
    ViewData["Title"] = "Index";

    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";

}
<br />

<div class="container-fluid">

    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h1>Ürün  Özelliği Ekleme Sayfası</h1>
             <div class="form-group">
                    <span style="color:red">* Listede istediğiniz özellik yok ise <a href="/Admin/ProductAttributeType/CreateProductAttribute" target="_blank" style="color:blue">buradan</a> özellik ekleyebilirsiniz. (sekme yeni pencerede açılır)</span>
             </div>

                <form method="post">
                    <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId">
                    <div class="form-group">
                        <label for="ProductAttributeType">Özellik Seçiniz</label>
                        <select class="form-control" style="min-height:40px" asp-for="ProductAttributeTypeId" asp-items="@ViewBag.TypeValues"></select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputForAttributeValue">Değer</label>
                        <input type="text" asp-for="AttributeValue" class="form-control" id="exampleInputForAttributeValue" placeholder="Lütfen değer yazınız">
                    </div>
                 
                    <button type="submit" class="btn btn-sm btn-primary">Kaydet</button>
                </form>

            </div>
        </div>
    </div>
</div>

