@using MultiShop.DtoLayer.Dtos.MessageDtos
@model List<ResultSendboxMessageDto>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden Mesajlar Listesi</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Kime</th>
                        <th>Konu</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th colspan="2">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ReviverId</td>
                            <td>@item.Subject</td>
                            <td>@item.MesssageDate.ToLongTimeString()</td>
                            <td>@item.IsRead</td>
                            <td> <a href="" class="btn btn-danger btn-md"> <i class="mdi mdi-delete"></i> Sil</a></td>
                            <td><a href="" class="btn btn-warning btn-md"> Mesajı Aç</a></td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>





